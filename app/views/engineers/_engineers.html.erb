<% if engineers.any? %>
  <ul class="media-list">
    <% engineers.each do |engineer| %>
      <li class="media">
        <div class="media-left">
          <img class="media-object img-rounded" src="<%= gravatar_url(engineer.user, { size: 50 }) %>" alt="">
        </div>
        <div class="media-body">
          <div>
            <%= engineer.user.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', engineer_path(engineer) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate engineers %>
<% end %>