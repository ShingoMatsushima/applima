<% if ideas.any? %>
  <ul class="media-list">
    <% ideas.each do |idea| %>
      <li class="media">
        <div class="media-left">
          <img class="media-object img-rounded" src="<%= gravatar_url(idea.user, { size: 50 }) %>" alt="">
        </div>
        <div class="media-body">
          <div>
            <%= idea.name %>
          </div>
          <div>
            <%= idea.user.name %>
          </div>
          <div>
            <p><%= link_to '詳細を見る', idea_path(idea) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate ideas %>
<% end %>